<model xmlns:security="http://namespaces.plone.org/supermodel/security"
       xmlns:marshal="http://namespaces.plone.org/supermodel/marshal"
       xmlns:form="http://namespaces.plone.org/supermodel/form"
       xmlns="http://namespaces.plone.org/supermodel/schema">
  <schema based-on="zope.interface.Interface">
   <field name="nb_run_eval" type="zope.schema.Int" form:mode="z3c.form.interfaces.IForm:hidden">
      <default>10</default>
      <required>True</required>
      <title>n-fold cross validation</title>
      <min>1</min>
    </field>
    <field name="data_split" type="zope.schema.Int" form:mode="z3c.form.interfaces.IForm:hidden">
      <default>100</default>
      <required>True</required>
      <title>data split</title>
      <min>0</min>
      <max>100</max>
    </field>
    <field name='prevalence' type='zope.schema.Decimal'>
      <required>False</required>
      <title>weighted response weights</title>
      <min>0</min>
      <max>1</max>
    </field>
    <field name="var_import" type="zope.schema.Int">
      <default>0</default>
      <required>True</required>
      <description>number of resampling of each explanatory variable to measure the relative importance of each variable for each selected model</description>
      <title>resampling</title>
      <min>0</min>
    </field>
    <field name="do_full_models" type="zope.schema.Bool" form:widget="z3c.form.browser.radio.RadioFieldWidget" form:mode="z3c.form.interfaces.IForm:hidden">
      <default>True</default>
      <description>calibrate &amp; evaluate models with the whole dataset?</description>
      <title>do full models</title>
    </field>
    <!-- GBM Specific Configuration -->
    <field name="distribution" type="zope.schema.Choice">
      <default>bernoulli</default>
      <title>distribution</title>
      <values>
        <element>bernoulli</element>
        <element>gaussian</element>
        <element>laplace</element>
        <element>tdist</element>
        <element>huberized</element>
        <element>multinomial</element>
        <element>adaboost</element>
        <element>poisson</element>
        <element>coxph</element>
        <element>quantile</element>
        <element>pairwise</element>
      </values>
    </field>
    <field name="n_trees" type="zope.schema.Int">
      <default>500</default>
      <required>True</required>
      <title>n trees</title>
      <description>the total number of trees to fit</description>
      <min>0</min>
    </field>
    <field name="interaction_depth" type="zope.schema.Int">
      <default>7</default>
      <required>True</required>
      <title>interaction depth</title>
      <description>maximum depth of variable interactions</description>
      <min>0</min>
    </field>
    <field name="n_minobsinnode" type="zope.schema.Int">
      <default>5</default>
      <required>False</required>
      <title>Min observations in terminal node</title>
      <description>minimum number of observations in the trees terminal
          nodes</description>
      <min>0</min>
    </field>
    <field name='shrinkage' type='zope.schema.Decimal'>
      <default>0.001</default>
      <required>True</required>
      <title>shrinkage</title>
      <description>a shrinkage parameter applied to each tree in the expansion</description>
      <min>0</min>
    </field>
    <field name='bag_fraction' type='zope.schema.Decimal'>
      <default>0.5</default>
      <required>True</required>
      <title>bag fraction</title>
      <description>the fraction of the training set observations randomly selected to propose the next tree in the expansion</description>
      <min>0</min>
      <max>1</max>
    </field>
    <field name='train_fraction' type='zope.schema.Decimal'>
      <default>1</default>
      <required>True</required>
      <title>train fraction</title>
      <description>the first train.fraction * nrows(data) observations are used to fit the gbm</description>
      <min>0</min>
    </field>
    <field name="cv_folds" type="zope.schema.Int">
      <default>5</default>
      <required>True</required>
      <title>cv folds</title>
      <description>the number of cross-validation folds to perform</description>
      <min>0</min>
    </field>
    <field name="random_seed" type="zope.schema.Int">
      <description>random seed used</description>
      <required>False</required>
      <title>random seed</title>
      <min>-2147483648</min>
      <max>2147483647</max>      
    </field>    
    <field name="pa_ratio" type="zope.schema.Decimal">
      <default>1</default>
      <description>Ratio of absence to presence points</description>
      <required>False</required>
      <title>absence-presence ratio</title>
      <min>0</min>
    </field>
    <field name="pa_strategy" type="zope.schema.Choice">
      <default>random</default>      
      <description>Pseudo Absences strategy</description>
      <required>True</required>
      <title>PA strategy</title>
      <vocabulary>pa_strategy_vocab</vocabulary>
    </field>
    <field name="pa_sre_quant" type="zope.schema.Decimal">
      <description>The quantile use for sre calculation in PA generation when sre PA strategy is chosen</description>
      <required>False</required>
      <title>PA sre quant</title>
      <min>0</min>
    </field>
    <field name="pa_disk_min" type="zope.schema.Decimal">
      <default>0</default>
      <description>Pseudo Absences minimum distance between pres and selected absences when disk PA strategy is chosen</description>
      <required>False</required>
      <title>PA disk min distance</title>
      <min>0</min>
    </field>
    <field name="pa_disk_max" type="zope.schema.Decimal">
      <description>Pseudo Absences maxmum distance between pres and selected absences when disk PA strategy is chosen</description>
      <required>False</required>
      <title>PA disk max distance</title>
      <min>0</min>
    </field>
  </schema>
</model>
